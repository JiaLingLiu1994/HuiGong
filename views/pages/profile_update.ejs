<!DOCTYPE html >
<html >
<head>

	<% include ../partials/header.ejs %>

<body>

<% include ../partials/nav.ejs %>

<div class="form-group col-md-12" >
    
  <div class="container col-md-4" id="panel3">
      
<% student.forEach(function( student ){username = student.username,name=student.name,student_phone=student.student_phone,
fa_name=student.father_name,fa_phone=student.father_phone,ma_name=student.mother_name,ma_phone=student.mother_phone
home_phone=student.home_phone}); %>

<form role="form" action="/profile_update" method="POST">
    
  <div class="form-group col-md-12">
    <label for="username">帳號</label>
    <input type="text" class="form-control" name="username" value="<%=username%>"  disabled>
  </div>
  
 <div class="form-group col-md-6">
    <label for="student_name">學生姓名</label>
    <input type="text" class="form-control" name="student_name" value="<%=name%>" required readonly>
  </div>

  <div class="form-group col-md-6">
    <label for="student_phone">電話</label>
    <input type="text" class="form-control" value="<%=student_phone%>" name="student_phone">
  </div>
  
  <div class="form-group col-md-6">
    <label for="fa_name">父親姓名</label>
    <input type="text" class="form-control" name="fa_name" value="<%=fa_name%>" >
  </div>
  <div class="form-group col-md-6">
    <label for="fa_phone">電話</label>
    <input type="text" class="form-control" name="fa_phone" value="<%=fa_phone%>">
  </div>
  
  <div class="form-group col-md-6">
    <label for="ma_name">母親姓名</label>
    <input type="text" class="form-control" name="ma_name" value="<%=ma_name%>">
  </div>
  <div class="form-group col-md-6">
    <label for="ma_phone">電話</label>
    <input type="text" class="form-control" name="ma_phone" value="<%=ma_phone%>">
  </div>
  
  <div class="form-group col-md-12">
    <label for="home_phone">家用電話</label>
    <input type="text" class="form-control" name="home_phone" value="<%=home_phone%>">
  </div>

  <div class="col-md-12 text-right">
      <!----------------------------------------------->
      <!--TODO--UPDATE THE STUDENT INFORMATION-->
      <!----------------------------------------------->
    <button type="submit" class="btn btn-primary">更新</button>
    <a id="modifyToStudents" type="button" class="btn btn-default" href="/profile">取消</a>
    
  </div>

</form>
  
</div>
  </div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/velocity/1.4.0/velocity.min.js"></script>
<script type="text/javascript" src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
<script src="https://use.fontawesome.com/4d5ece1593.js"></script>


</body>

</html>