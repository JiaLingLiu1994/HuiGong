          <div class="tag_name"><%= contactbook.grade %><%= contactbook.category %></div>
            <div class="c_content">
              <div class="post_name"><p>今日作業</p></div>
              <br>
              <p><%= contactbook.content %></p>
            </div>

          <div class="teacher">
            
            <div class="teacher_info">
              
              <div class="teacher_name"><%= contactbook.post_user %> • <%= contactbook.contactdate %></div>
              <div class="teacher_avatar">
                <img  src="img/logo.png">
              </div>
            </div>
          </div> <!-- end .user -->
        </div> <!-- end .container -->
      </div> <!-- end card -->
      <% } %>
     <% }); %>
